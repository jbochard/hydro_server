<div ng-controller="VariablesController">
	<div class="row">
		<div class="col-lg-12" style="padding: 20px">
			<form name="searchForm" ng-submit="search()" role="form">
				<div class="input-group">
					<input type="text" class="form-control" ng-model="search_value" ng-trim="true" box-shadow>
					<div class="input-group-btn">
						<button class="btn btn-primary">
					    	<i class="glyphicon glyphicon-search"></i>
						</button>
					</div>
				</div>
			</form>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12" style="padding-left: 20px">
			<span id="checkAll" ng-click="checkAll()"><u style="cursor: pointer;">Seleccionar todo</u></span>&nbsp;&nbsp;&nbsp;&nbsp;
			<span id="uncheckAll" ng-click="uncheckAll()"><u style="cursor: pointer;">Deseleccionar todo</u></span>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<div class="table-responsive">
				<table class="table table-hover">
					<tbody>
						<tr ng-repeat="var in variables | orderBy: ['context', 'key']">
							<td><input type="checkbox" ng-model="var.selected" /></td>
							<td>{{var.context}}</td>
							<td>{{var.key}}</td>
							<td>{{var.value}}</td>
							<td style="text-align: end; padding-right: 30px;">
								<a ng-click="edit(var.context, var.key, var.value)"><span class="glyphicon glyphicon-pencil"></span></a>
							</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<button ng-click='add()' class="btn-success">
			    <i class="glyphicon glyphicon-file"></i><span> Agregar</span>
			</button>
			<button ng-click='delete()' class="btn-danger">
			    <i class="glyphicon glyphicon-trash"></i><span> Borrar</span>
			</button>
		</div>
	</div>

	<modal title="'Variable de contexto'" visible="showCxtDlg" modal-class="modal-lg">
		<div class="container-fluid">
	  		<div class="row" style="margin-bottom: 10px">
	      		<div class="col-lg-12">
	      			<label>Context</label>
	      			<input type="text" ng-model='contextEdt' class="form-control" />
	      		</div>
	    	</div>
	  		<div class="row" style="margin-bottom: 10px">
	      		<div class="col-lg-12">
	      			<label>Key</label>
	      			<input type="text" ng-model='keyEdt' class="form-control" />
	      		</div>
	    	</div>
	  		<div class="row" style="margin-bottom: 10px">
	      		<div class="col-lg-12">
	      			<label>Value</label>
	      			<input type="text" ng-model='valueEdt' class="form-control" />
	      		</div>
	    	</div>
	    	<div class="row">
	  			<div class="col-lg-12 text-center">
					<button ng-click='save(contextEdt, keyEdt, valueEdt)' class="btn-primary">
						<i class="glyphicon glyphicon-floppy-saved"></i><span> Guardar</span>
					</button>
				</div>
	    	</div>
		</div>
	</modal>
</div>
